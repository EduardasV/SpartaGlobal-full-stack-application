<form action="/<%= @movie.id %>" method="post">
<div>
  <label>Title</label>
  <input type="text" name="title" placeholder="Enter a title" value="<%= @movie.title %>">
</div>
<div>
  <label>Description</label>
  <textarea name="movie_description" placeholder="The body of the text"><%= @movie.movie_description %></textarea>
</div>
<div>
  <label>Image</label>
  <input type="text" name="movie_image" placeholder="Enter an image link" value="<%= @movie.movie_image %>">
</div>
<div>
  <label>Video</label>
  <input type="text" name="movie_trailer" placeholder="Enter a video link" value="<%= @movie.movie_trailer %>">
</div>
<div>
  <input type="submit" value="Save Post">
</div>
<% if(@movie.id) %>
  <input type="hidden" name="_method" value="PUT">
<% end %>
</form>
